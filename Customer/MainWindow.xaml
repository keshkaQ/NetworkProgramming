<Window
    x:Class="Consumer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Consumer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Consumer - Очередь заказов"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA" />
            <Setter Property="BorderBrush" Value="#DDD" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="15" />
        </Style>
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#2C3E50" />
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Margin="0,0,0,10"
            Style="{StaticResource BorderStyle}">
            <StackPanel>
                <TextBlock
                    Margin="5,0,0,10"
                    Style="{StaticResource TextBlockStyle}"
                    Text="Управление очередью" />

                <StackPanel Orientation="Horizontal">
                    <Button
                        x:Name="StartQueueButton"
                        Command="{Binding StartQueueCommand}"
                        Content="▶ Запустить очередь"
                        Style="{StaticResource ButtonStyle}" />
                    <Button
                        x:Name="StopQueueButton"
                        Background="#E74C3C"
                        Command="{Binding StopQueueCommand}"
                        Content="⏹ Остановить очередь"
                        Style="{StaticResource ButtonStyle}" />
                    <Button
                        x:Name="ClearLogsButton"
                        Background="#95A5A6"
                        Command="{Binding ClearLogsCommand}"
                        Content="🧹 Очистить логи"
                        Style="{StaticResource ButtonStyle}" />
                </StackPanel>
                <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                    <StackPanel Margin="0,0,20,0" Orientation="Horizontal">
                        <TextBlock
                            Margin="10,0,0,0"
                            Style="{StaticResource TextBlockStyle}"
                            Text="Статус:" />
                        <TextBlock
                            x:Name="QueueStatusText"
                            Style="{StaticResource TextBlockStyle}"
                            Margin="10,0,0,0"
                            Foreground="{Binding QueueStatusColor}"
                            Text="{Binding QueueStatus}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource BorderStyle}">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,10"
                    Style="{StaticResource TextBlockStyle}"
                    Text="Логи" />
                <ListBox
                    HorizontalContentAlignment="Stretch"
                    Background="#1E1E1E"
                    BorderThickness="0"
                    FontSize="10"
                    Foreground="White"
                    ItemsSource="{Binding Logs}"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
    </Grid>
</Window>