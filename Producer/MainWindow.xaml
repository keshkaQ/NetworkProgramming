<Window
    x:Class="Producer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Producer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Producer (IphoneStore)"
    Width="700"
    Height="900"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="OrderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Green" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Height" Value="40" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="20,10" />
        </Style>

        <Style x:Key="SelectionListStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#DDD" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="AliceBlue" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#F5F5f5" />
            <Setter Property="BorderBrush" Value="#EEE" />
            <Setter Property="Margin" Value="10,5" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="5" />
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            Margin="0"
            Padding="0"
            Style="{StaticResource BorderStyle}">
            <StackPanel>
                <TextBlock
                    Margin="15,15,15,10"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Каталог iPhone" />

                <ListBox
                    x:Name="iPhoneListBox"
                    Height="750"
                    Margin="10,0,10,10"
                    Background="White"
                    BorderThickness="0"
                    ItemContainerStyle="{StaticResource SelectionListStyle}"
                    SelectionChanged="iPhoneListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="Bold"
                                    Text="{Binding ModelName}"
                                    TextWrapping="Wrap" />

                                <TextBlock
                                    FontSize="11"
                                    Foreground="#666"
                                    Text="{Binding ColorVariants[0].Price, StringFormat='{}от {0}'}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="5" Background="White">

                <TextBlock
                    Margin="10,10,10,5"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="{Binding CurrentiPhone.Name, FallbackValue='Выберите iPhone'}" />
                <StackPanel Margin="15,0,15,5" Orientation="Horizontal">
                    <TextBlock
                        FontSize="11"
                        Foreground="#FF6A00"
                        Text="{Binding CurrentiPhone.Rating}" />
                    <TextBlock
                        FontSize="11"
                        Foreground="#666"
                        Text="{Binding CurrentiPhone.Reviews}" />
                    <TextBlock
                        FontSize="11"
                        Foreground="#666"
                        Text=" ✅ Оригинал" />
                </StackPanel>

                <Image
                    Width="200"
                    Height="200"
                    Source="{Binding CurrentiPhone.ImageSource}"
                    Stretch="Uniform" />

                <StackPanel Margin="15,5" Orientation="Horizontal">
                    <TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#FF6A00"
                        Text="{Binding FinalPrice, FallbackValue='0 ₽'}" />
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="12"
                        Foreground="#999"
                        Text="{Binding CurrentiPhone.OldPrice, FallbackValue='0 ₽'}"
                        TextDecorations="Strikethrough" />
                </StackPanel>

                <Border Style="{StaticResource BorderStyle}">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Text="Выберите цвет и память" />
                        <ListBox
                            x:Name="ColorListBox"
                            Height="120"
                            Margin="0,0,0,5"
                            ItemContainerStyle="{StaticResource SelectionListStyle}"
                            SelectionChanged="ColorListBox_SelectionChanged"
                            SelectionMode="Single">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock FontWeight="SemiBold" Text="{Binding Color}" />
                                        <TextBlock
                                            FontSize="11"
                                            Foreground="#666"
                                            Text="{Binding Storage}" />
                                        <TextBlock
                                            FontSize="11"
                                            FontWeight="Bold"
                                            Foreground="#FF6A00"
                                            Text="{Binding Price}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource BorderStyle}">
                    <StackPanel>
                        <TextBlock
                            FontSize="12"
                            FontWeight="SemiBold"
                            Text="Характеристики:" />
                        <TextBlock
                            Margin="0,3,0,0"
                            FontSize="11"
                            Text="{Binding CurrentiPhone.Specifications}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource BorderStyle}">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Text="Тип SIM карты" />
                        <ListBox
                            x:Name="SimListBox"
                            Height="60"
                            Margin="0,0,0,5"
                            ItemContainerStyle="{StaticResource SelectionListStyle}"
                            SelectionMode="Single">
                            <ListBoxItem Content="nano-SIM + eSIM" Tag="nano_esim" />
                            <ListBoxItem Content="nano-SIM + nano-SIM" Tag="nano_nano" />
                        </ListBox>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource BorderStyle}">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                            <TextBlock FontWeight="SemiBold" Text="Ваше имя:" />
                            <TextBox
                                Name="customerName"
                                Width="120"
                                Height="20"
                                Margin="10,0,0,0"
                                TextChanged="customerName_TextChanged" />
                        </StackPanel>
                        <TextBlock
                            Name="ErrorNameTextBlock"
                            Margin="0 5 0 5"
                            Foreground="Red"
                            Text="{Binding ErrorName}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontWeight="SemiBold" Text="Ваш Email:" />
                            <TextBox
                                Name="customerEmail"
                                Width="200"
                                Height="20"
                                Margin="10,0,0,0"
                                TextChanged="CustomerEmail_TextChanged" />
                        </StackPanel>
                        <TextBlock
                            Name="ErrorTextBlock"
                             Margin="0 5 0 5"
                            Foreground="Red"
                            Text="{Binding ErrorText}" />
                    </StackPanel>
                </Border>
                <Button
                    Click="OrderButton_Click"
                    Content="Оформить заказ"
                    Style="{StaticResource OrderButtonStyle}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>